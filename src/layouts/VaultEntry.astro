---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  pubDate: Date | string;
  mood?: string;
}

const { title, pubDate, mood } = Astro.props;

let dateObject: Date;
if (!pubDate) {
  dateObject = new Date();
} else if (pubDate instanceof Date) {
  dateObject = pubDate;
} else {
  dateObject = new Date(pubDate);
}

if (isNaN(dateObject.getTime())) {
  console.error('Invalid date:', pubDate);
  dateObject = new Date();
}

const formattedDate = dateObject.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={`${title} | Vault`} description="Private journal entry">
  <div id="entry-gate" class="entry-gate">
    <div class="gate-container">
      <div class="lock-icon">
        <svg width="56" height="56" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          <circle cx="12" cy="16" r="1"></circle>
        </svg>
      </div>
      <h1 class="gate-title">Protected Entry</h1>
      <p class="gate-message">This journal entry is private and requires vault access to view.</p>
      <a href="/vault" class="vault-button">
        <span>Unlock Vault</span>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>

  <article id="entry-content" class="entry">
    <header class="entry-header">
      <a href="/vault" class="back-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m15 18-6-6 6-6"></path>
        </svg>
        <span>Back to Vault</span>
      </a>
      <div class="entry-meta">
        <time datetime={dateObject.toISOString()}>{formattedDate}</time>
        {mood && <span class="mood-tag">{mood}</span>}
      </div>
      <h1>{title}</h1>
    </header>
    <div class="entry-content">
      <slot />
    </div>
    <footer class="entry-footer">
      <a href="/vault" class="back-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m15 18-6-6 6-6"></path>
        </svg>
        <span>Back to Vault</span>
      </a>
    </footer>
  </article>
</BaseLayout>

<script is:inline>
  const gate = document.getElementById('entry-gate');
  const content = document.getElementById('entry-content');

  if (sessionStorage.getItem('vault-unlocked') === 'true') {
    gate.style.display = 'none';
    content.classList.add('visible');
  }
</script>

<style>
  /* Entry Gate Styles */
  .entry-gate {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 50vh;
    padding: 3rem 1.5rem;
  }

  .gate-container {
    text-align: center;
    max-width: 400px;
    animation: fadeIn 0.4s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .lock-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 88px;
    height: 88px;
    border-radius: 50%;
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    color: var(--blue-primary);
    margin-bottom: 1.75rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .lock-icon:hover {
    transform: scale(1.02);
    box-shadow: 0 4px 12px rgba(35, 45, 75, 0.08);
  }

  .gate-title {
    font-size: 1.75rem;
    letter-spacing: -0.02em;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .gate-message {
    font-size: 1rem;
    color: var(--text-muted);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .vault-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: white;
    background: var(--blue-primary);
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(35, 45, 75, 0.15);
  }

  .vault-button:hover {
    background: var(--blue-light);
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(35, 45, 75, 0.2);
  }

  .vault-button:active {
    transform: translateY(0);
  }

  .vault-button svg {
    transition: transform 0.2s ease;
  }

  .vault-button:hover svg {
    transform: translateX(3px);
  }

  /* Entry Content Styles */
  .entry {
    display: none;
    max-width: 680px;
    margin: 0 auto;
    opacity: 0;
  }

  .entry.visible {
    display: block;
    animation: contentFadeIn 0.5s ease-out forwards;
  }

  @keyframes contentFadeIn {
    from {
      opacity: 0;
      transform: translateY(15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .entry-header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-light);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: color 0.15s ease;
  }

  .back-link:hover {
    color: var(--blue-primary);
  }

  .back-link svg {
    transition: transform 0.15s ease;
  }

  .back-link:hover svg {
    transform: translateX(-2px);
  }

  .entry-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .entry-header time {
    font-size: 0.875rem;
    color: var(--text-muted);
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .mood-tag {
    display: inline-flex;
    align-items: center;
    font-size: 0.8125rem;
    color: var(--orange-accent);
    background: rgba(229, 114, 0, 0.08);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-weight: 500;
  }

  .entry-header h1 {
    font-size: 2.25rem;
    line-height: 1.2;
    letter-spacing: -0.03em;
    color: var(--text-primary);
    margin-bottom: 0;
  }

  /* Entry Content Typography */
  .entry-content {
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .entry-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .entry-content :global(h2) {
    font-size: 1.625rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .entry-content :global(h3) {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .entry-content :global(ul),
  .entry-content :global(ol) {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .entry-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .entry-content :global(blockquote) {
    border-left: 3px solid var(--orange-accent);
    padding-left: 1.25rem;
    margin: 1.75rem 0;
    font-style: italic;
    color: var(--text-secondary);
  }

  .entry-content :global(blockquote p) {
    margin-bottom: 0;
  }

  .entry-content :global(code) {
    font-family: 'SF Mono', Menlo, Monaco, 'Courier New', monospace;
    font-size: 0.9em;
    background: var(--bg-secondary);
    padding: 0.15rem 0.35rem;
    border-radius: 3px;
  }

  .entry-content :global(pre) {
    background: var(--blue-primary);
    padding: 1.25rem 1.5rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 1.75rem 0;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .entry-content :global(pre code) {
    background: transparent;
    padding: 0;
    color: #e5e5e5;
  }

  .entry-content :global(img) {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
    border-radius: 4px;
  }

  .entry-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border-light);
    margin: 2.5rem 0;
  }

  /* Entry Footer */
  .entry-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-light);
  }
</style>
