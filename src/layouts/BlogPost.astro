---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date | string;
  author?: string;
}

const { title, description, pubDate, author = "Anonymous" } = Astro.props;

let dateObject: Date;
if (!pubDate) {
  dateObject = new Date();
} else if (pubDate instanceof Date) {
  dateObject = pubDate;
} else {
  dateObject = new Date(pubDate);
}

if (isNaN(dateObject.getTime())) {
  console.error('Invalid date:', pubDate);
  dateObject = new Date();
}

const formattedDate = dateObject.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title} description={description}>
  <article class="article">
    <header class="article-header">
      <time datetime={dateObject.toISOString()}>{formattedDate}</time>
      <h1>{title}</h1>
      <p class="byline">By {author}</p>
    </header>
    <div class="article-content">
      <slot />
    </div>
    <footer class="article-footer">
      <a href="/blog" class="back-link">&larr; All articles</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .article {
    max-width: 680px;
    margin: 0 auto;
  }

  .article-header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .article-header time {
    display: block;
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 0.75rem;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .article-header h1 {
    font-size: 2.5rem;
    line-height: 1.15;
    margin-bottom: 1rem;
    letter-spacing: -0.03em;
  }

  .byline {
    font-size: 1rem;
    color: #666;
    margin-bottom: 0;
  }

  .article-content {
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .article-content :global(h2) {
    font-size: 1.625rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .article-content :global(h3) {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .article-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .article-content :global(code) {
    font-family: 'SF Mono', Menlo, Monaco, 'Courier New', monospace;
    font-size: 0.9em;
    background: #f5f5f5;
    padding: 0.15rem 0.35rem;
    border-radius: 3px;
  }

  .article-content :global(pre) {
    background: #1a1a1a;
    padding: 1.25rem 1.5rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.75rem 0;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .article-content :global(pre code) {
    background: transparent;
    padding: 0;
    color: #e5e5e5;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .article-content :global(blockquote) {
    border-left: 3px solid #1a1a1a;
    padding-left: 1.25rem;
    margin: 1.75rem 0;
    font-style: italic;
    color: #444;
  }

  .article-content :global(blockquote p) {
    margin-bottom: 0;
  }

  .article-content :global(img) {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
  }

  .article-content :global(hr) {
    border: none;
    border-top: 1px solid #e5e5e5;
    margin: 2.5rem 0;
  }

  .article-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e5;
  }

  .back-link {
    font-size: 0.9375rem;
    color: #666;
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .back-link:hover {
    color: #1a1a1a;
  }
</style>
