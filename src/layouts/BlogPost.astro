---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date | string;
  author?: string;
}

const { title, description, pubDate, author = "Anonymous" } = Astro.props;

// Handle date - could be Date object, string, or from frontmatter
let dateObject: Date;
if (!pubDate) {
  // Fallback to current date if no date provided
  dateObject = new Date();
} else if (pubDate instanceof Date) {
  dateObject = pubDate;
} else {
  // Convert string to date
  dateObject = new Date(pubDate);
}

// Validate the date
if (isNaN(dateObject.getTime())) {
  console.error('Invalid date:', pubDate);
  dateObject = new Date(); // Fallback to current date
}

const formattedDate = dateObject.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title} description={description}>
  <article class="blog-post">
    <header class="post-header">
      <h1>{title}</h1>
      <div class="post-meta">
        <time datetime={dateObject.toISOString()}>{formattedDate}</time>
        <span class="separator">•</span>
        <span class="author">By {author}</span>
      </div>
    </header>
    <div class="post-content">
      <slot />
    </div>
    <footer class="post-footer">
      <a href="/blog" class="back-link">← Back to Blog</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    background: white;
    padding: 3rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    max-width: 800px;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #f0f0f0;
  }

  .post-header h1 {
    font-size: 2.5rem;
    color: #1a1a1a;
    margin-bottom: 1rem;
  }

  .post-meta {
    color: #666;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .separator {
    color: #ccc;
  }

  .post-content {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .post-content :global(h2) {
    font-size: 1.8rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  .post-content :global(h3) {
    font-size: 1.4rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: #1a1a1a;
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .post-content :global(code) {
    background: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
  }

  .post-content :global(pre) {
    background: #1e1e1e;
    padding: 1rem;
    border-radius: 5px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .post-content :global(pre code) {
    background: transparent;
    padding: 0;
    color: #fff;
  }

  .post-content :global(ul), .post-content :global(ol) {
    margin-left: 2rem;
    margin-bottom: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid #6366f1;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #666;
    font-style: italic;
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid #f0f0f0;
  }

  .back-link {
    color: #6366f1;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
  }

  .back-link:hover {
    color: #4f46e5;
  }
</style>
