---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';

// Gather posts from all categories
const techPosts = await Astro.glob('./tech/*.md');
const econPosts = await Astro.glob('./economics/*.md');
const bookPosts = await Astro.glob('./books/*.md');
const projectPosts = await Astro.glob('./projects/*.md');
const thoughtPosts = await Astro.glob('./thoughts/*.md');

// Combine and sort all posts
const allPosts = [
  ...techPosts.map(p => ({ ...p, category: 'tech' as const })),
  ...econPosts.map(p => ({ ...p, category: 'economics' as const })),
  ...bookPosts.map(p => ({ ...p, category: 'books' as const })),
  ...projectPosts.map(p => ({ ...p, category: 'projects' as const })),
  ...thoughtPosts.map(p => ({ ...p, category: 'thoughts' as const })),
];

const sortedPosts = allPosts.sort((a, b) =>
  new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);

const recentPosts = sortedPosts.slice(0, 5);
---

<BaseLayout
  title="James Hawley"
  description="Personal writing on technology, economics, and ideas. CS & Economics at UVA."
>
  <section class="hero">
    <div class="accent-bar"></div>
    <h1>James Hawley</h1>
    <p class="hero-subtitle">
      Computer Science & Economics at the University of Virginia
    </p>
    <p class="hero-description">
      Writing about the intersection of technology and economics, reviewing books that shape my thinking,
      and documenting the projects I build. This is my space for exploring ideas and sharing what I learn.
    </p>
  </section>

  <section class="categories">
    <h2 class="section-title">Explore</h2>
    <div class="category-grid">
      <a href="/tech" class="category-card">
        <span class="category-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <polyline points="16 18 22 12 16 6"></polyline>
            <polyline points="8 6 2 12 8 18"></polyline>
          </svg>
        </span>
        <h3>Technology</h3>
        <p>Software, programming, and the tech industry</p>
      </a>
      <a href="/economics" class="category-card">
        <span class="category-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <line x1="12" y1="20" x2="12" y2="10"></line>
            <line x1="18" y1="20" x2="18" y2="4"></line>
            <line x1="6" y1="20" x2="6" y2="16"></line>
          </svg>
        </span>
        <h3>Economics</h3>
        <p>Markets, policy, and economic analysis</p>
      </a>
      <a href="/books" class="category-card">
        <span class="category-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
          </svg>
        </span>
        <h3>Book Reviews</h3>
        <p>Reviews of books that shaped my thinking</p>
      </a>
      <a href="/projects" class="category-card">
        <span class="category-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
            <polyline points="2 17 12 22 22 17"></polyline>
            <polyline points="2 12 12 17 22 12"></polyline>
          </svg>
        </span>
        <h3>Projects</h3>
        <p>Technical deep-dives into what I build</p>
      </a>
      <a href="/thoughts" class="category-card">
        <span class="category-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
          </svg>
        </span>
        <h3>Thoughts</h3>
        <p>Essays and reflections on ideas</p>
      </a>
      <a href="/about" class="category-card">
        <span class="category-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </span>
        <h3>About Me</h3>
        <p>Learn more about who I am</p>
      </a>
    </div>
  </section>

  <section class="latest">
    <h2 class="section-title">Recent Writing</h2>
    <div class="articles">
      {recentPosts.length > 0 ? (
        recentPosts.map((post) => (
          <BlogCard
            title={post.frontmatter.title}
            description={post.frontmatter.description}
            pubDate={new Date(post.frontmatter.pubDate)}
            url={post.url || ''}
            category={post.category}
          />
        ))
      ) : (
        <p class="no-posts">New content coming soon. Check back later.</p>
      )}
    </div>
  </section>

  <section class="cta">
    <div class="cta-content">
      <h2>Looking to hire?</h2>
      <p>
        I'm a CS & Economics student passionate about building software and understanding markets.
        Check out my <a href="/projects">projects</a> or learn more <a href="/about">about me</a>.
      </p>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--border-light);
    margin-bottom: 3rem;
    max-width: 680px;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    letter-spacing: -0.03em;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--uva-blue);
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 0;
  }

  .section-title {
    font-size: 0.8125rem;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .categories {
    margin-bottom: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--border-light);
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .category-card {
    display: block;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .category-card:hover {
    border-color: var(--uva-blue);
    box-shadow: 0 2px 8px rgba(35, 45, 75, 0.08);
  }

  .category-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: white;
    border: 1px solid var(--border-light);
    border-radius: 6px;
    color: var(--uva-blue);
    margin-bottom: 1rem;
  }

  .category-card h3 {
    font-size: 1.125rem;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
    font-family: Georgia, 'Times New Roman', serif;
  }

  .category-card p {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 0;
    line-height: 1.5;
  }

  .latest {
    margin-bottom: 3rem;
  }

  .articles {
    max-width: 680px;
  }

  .no-posts {
    color: var(--text-muted);
    font-style: italic;
  }

  .cta {
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    border-radius: 6px;
    padding: 2rem;
    max-width: 680px;
  }

  .cta h2 {
    font-size: 1.375rem;
    margin-bottom: 0.75rem;
  }

  .cta p {
    color: var(--text-secondary);
    margin-bottom: 0;
    line-height: 1.7;
  }

  .cta a {
    color: var(--uva-blue);
    font-weight: 500;
  }

  @media (max-width: 600px) {
    .hero h1 {
      font-size: 2.25rem;
    }

    .category-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
