---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';

const allPosts = await Astro.glob('./blog/*.md');
const sortedPosts = allPosts.sort((a, b) =>
  new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);
const recentPosts = sortedPosts.slice(0, 3);
---

<BaseLayout
  title="Home"
  description="Thoughtful writing on web development, programming, and technology."
>
  <section class="intro">
    <h1>The Journal</h1>
    <p class="tagline">
      Thoughtful writing on web development, modern frameworks, and the craft of building for the web.
    </p>
  </section>

  <section class="latest">
    <h2>Latest</h2>
    <div class="articles">
      {recentPosts.map((post) => (
        <BlogCard
          title={post.frontmatter.title}
          description={post.frontmatter.description}
          pubDate={new Date(post.frontmatter.pubDate)}
          url={post.url || ''}
        />
      ))}
    </div>
    <div class="all-articles">
      <a href="/blog">View all articles &rarr;</a>
    </div>
  </section>
</BaseLayout>

<style>
  .intro {
    padding-bottom: 3rem;
    border-bottom: 1px solid #e5e5e5;
    margin-bottom: 3rem;
  }

  .intro h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    letter-spacing: -0.03em;
  }

  .tagline {
    font-size: 1.25rem;
    color: #666;
    line-height: 1.5;
    max-width: 540px;
    margin-bottom: 0;
  }

  .latest h2 {
    font-size: 0.8125rem;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #999;
    margin-bottom: 1.5rem;
  }

  .articles {
    margin-bottom: 2rem;
  }

  .all-articles {
    padding-top: 1rem;
  }

  .all-articles a {
    font-size: 0.9375rem;
    color: #666;
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .all-articles a:hover {
    color: #1a1a1a;
  }
</style>
