<style is:global>
  :root {
    --blue-deep: #0e1a26;
    --blue-primary: #232d4b;
    --blue-light: #3a4a6b;
    --orange-accent: #e57200;
    --text-primary: #1a1a1a;
    --text-secondary: #4a4a4a;
    --text-muted: #6b6b6b;
    --bg-primary: #ffffff;
    --bg-secondary: #f8f9fa;
    --border-subtle: rgba(35, 45, 75, 0.1);
    --border-light: rgba(35, 45, 75, 0.15);
  }

  *, *::before, *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: 17px;
    line-height: 1.7;
    color: var(--text-primary);
    background-color: var(--bg-primary);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Soothing Animated Dot Matrix Background */
  .dot-matrix {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: -1;
    background-image: radial-gradient(circle, rgba(35, 45, 75, 0.12) 1.5px, transparent 1.5px);
    background-size: 28px 28px;
    animation: dotBreath 6s ease-in-out infinite, dotFloat 25s ease-in-out infinite;
  }

  @keyframes dotBreath {
    0%, 100% {
      opacity: 0.5;
      background-size: 28px 28px;
    }
    50% {
      opacity: 0.8;
      background-size: 30px 30px;
    }
  }

  @keyframes dotFloat {
    0%, 100% {
      background-position: 0 0;
    }
    25% {
      background-position: 14px 7px;
    }
    50% {
      background-position: 0 14px;
    }
    75% {
      background-position: -14px 7px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .dot-matrix {
      animation: none;
      opacity: 0.6;
    }
  }
</style>

<style>
  .homepage {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .hero {
    max-width: 560px;
    text-align: center;
    animation: fadeUp 0.8s ease-out;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-content {
    margin-bottom: 2rem;
  }

  .greeting {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .wave {
    font-size: 1.75rem;
    display: inline-block;
    animation: wave 2.5s ease-in-out infinite;
    transform-origin: 70% 70%;
  }

  @keyframes wave {
    0%, 100% { transform: rotate(0deg); }
    10% { transform: rotate(14deg); }
    20% { transform: rotate(-8deg); }
    30% { transform: rotate(14deg); }
    40% { transform: rotate(-4deg); }
    50%, 100% { transform: rotate(0deg); }
  }

  .greeting-text {
    font-size: 1.1rem;
    color: var(--text-muted);
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  .name {
    font-size: 3.75rem;
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.1;
    margin-bottom: 0.75rem;
    background: linear-gradient(135deg, var(--blue-primary) 0%, var(--blue-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin: 0;
  }

  .highlight {
    color: var(--text-primary);
    font-weight: 500;
  }

  .bio {
    margin-bottom: 2.5rem;
    animation: fadeUp 0.8s ease-out 0.15s backwards;
  }

  .bio p {
    font-size: 1.1rem;
    line-height: 1.75;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .bio strong {
    color: var(--text-primary);
    font-weight: 600;
  }

  .location {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.9375rem !important;
    color: var(--text-muted) !important;
    margin-bottom: 0 !important;
  }

  .location svg {
    opacity: 0.7;
  }

  .contact-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 2rem;
    animation: fadeUp 0.8s ease-out 0.3s backwards;
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    transition: all 0.25s ease;
  }

  .contact-link:hover {
    color: var(--blue-primary);
    border-color: var(--blue-primary);
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(35, 45, 75, 0.12);
  }

  .contact-link svg {
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .contact-link:hover svg {
    opacity: 1;
  }

  .contact-link.cta {
    background: var(--blue-primary);
    color: white;
    border-color: var(--blue-primary);
  }

  .contact-link.cta:hover {
    background: var(--blue-light);
    border-color: var(--blue-light);
    color: white;
  }

  .contact-link.cta svg {
    opacity: 1;
    transition: transform 0.2s ease;
  }

  .contact-link.cta:hover svg {
    transform: translateX(3px);
  }

  .about-link {
    display: inline-block;
    font-size: 0.9375rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s ease;
    animation: fadeUp 0.8s ease-out 0.45s backwards;
  }

  .about-link:hover {
    color: var(--blue-primary);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .homepage {
      padding: 1.5rem;
    }

    .name {
      font-size: 2.75rem;
    }

    .tagline {
      font-size: 1.1rem;
    }

    .bio p {
      font-size: 1rem;
    }

    .contact-links {
      gap: 0.5rem;
    }

    .contact-link {
      padding: 0.5rem 0.875rem;
      font-size: 0.8125rem;
    }
  }

  @media (max-width: 400px) {
    .contact-link span {
      display: none;
    }

    .contact-link {
      padding: 0.625rem;
    }

    .contact-link.cta span {
      display: inline;
    }
  }
</style>
