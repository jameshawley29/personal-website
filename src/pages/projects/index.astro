---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/BlogCard.astro';

const allPosts = await Astro.glob('./*.md');
const sortedPosts = allPosts.sort((a, b) =>
  new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);
---

<BaseLayout
  title="Projects"
  description="Showcases and write-ups of personal and academic projects."
>
  <section class="category-page">
    <header class="category-header">
      <div class="accent-bar"></div>
      <h1>Projects</h1>
      <p class="category-description">
        Deep dives into projects I've built, from conception to implementation, including technical decisions and lessons learned.
      </p>
    </header>

    <div class="articles">
      {sortedPosts.length > 0 ? (
        sortedPosts.map((post) => (
          <BlogCard
            title={post.frontmatter.title}
            description={post.frontmatter.description}
            pubDate={new Date(post.frontmatter.pubDate)}
            url={post.url || ''}
            category="projects"
          />
        ))
      ) : (
        <p class="no-posts">No project write-ups yet. Check back soon.</p>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .category-page {
    max-width: 680px;
    margin: 0 auto;
  }

  .category-header {
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--border-light);
    margin-bottom: 2rem;
  }

  .category-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    letter-spacing: -0.03em;
  }

  .category-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 0;
  }

  .no-posts {
    color: var(--text-muted);
    font-style: italic;
  }
</style>
