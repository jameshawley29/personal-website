---
import BaseLayout from '../../layouts/BaseLayout.astro';

const allEntries = await Astro.glob('./*.md');
const sortedEntries = allEntries.sort((a, b) =>
  new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);
---

<BaseLayout
  title="Private Vault"
  description="Personal journal and private notes."
>
  <section class="vault-page">
    <div id="vault-gate" class="vault-gate">
      <div class="vault-icon">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
        </svg>
      </div>
      <h1>Private Vault</h1>
      <p class="vault-description">This is a private space for personal thoughts and reflections.</p>
      <form id="passcode-form" class="passcode-form">
        <input
          type="password"
          id="passcode-input"
          placeholder="Enter passcode"
          autocomplete="off"
          class="passcode-input"
        />
        <button type="submit" class="passcode-button">Unlock</button>
      </form>
      <p id="error-message" class="error-message"></p>
    </div>

    <div id="vault-content" class="vault-content" style="display: none;">
      <header class="vault-header">
        <div class="accent-bar"></div>
        <h1>Private Vault</h1>
        <p class="vault-subtitle">Personal journal entries and private reflections</p>
        <button id="lock-button" class="lock-button">Lock Vault</button>
      </header>

      <div class="entries">
        {sortedEntries.length > 0 ? (
          sortedEntries.map((entry) => (
            <article class="entry-item">
              <a href={entry.url}>
                <time datetime={new Date(entry.frontmatter.pubDate).toISOString()}>
                  {new Date(entry.frontmatter.pubDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <h2>{entry.frontmatter.title}</h2>
                {entry.frontmatter.mood && (
                  <span class="mood-tag">{entry.frontmatter.mood}</span>
                )}
              </a>
            </article>
          ))
        ) : (
          <p class="no-entries">No journal entries yet. Start writing your first one.</p>
        )}
      </div>
    </div>
  </section>
</BaseLayout>

<script is:inline>
  // Simple client-side passcode protection
  // The passcode is "wahoo" (UVA's cheer!)
  const PASSCODE_HASH = '5baa61e4c9b93f3f0682250b6cf8331b7ee68fd8'; // SHA1 of "wahoo" - Change this!

  async function hashPasscode(passcode) {
    const encoder = new TextEncoder();
    const data = encoder.encode(passcode.toLowerCase().trim());
    const hashBuffer = await crypto.subtle.digest('SHA-1', data);
    const hashArray = Array.from(new Uint8Array(hashBuffer));
    return hashArray.map(b => b.toString(16).padStart(2, '0')).join('');
  }

  const gate = document.getElementById('vault-gate');
  const content = document.getElementById('vault-content');
  const form = document.getElementById('passcode-form');
  const input = document.getElementById('passcode-input');
  const error = document.getElementById('error-message');
  const lockButton = document.getElementById('lock-button');

  // Check if already unlocked in this session
  if (sessionStorage.getItem('vault-unlocked') === 'true') {
    gate.style.display = 'none';
    content.style.display = 'block';
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const hash = await hashPasscode(input.value);

    if (hash === PASSCODE_HASH) {
      sessionStorage.setItem('vault-unlocked', 'true');
      gate.style.display = 'none';
      content.style.display = 'block';
      error.textContent = '';
    } else {
      error.textContent = 'Incorrect passcode. Please try again.';
      input.value = '';
      input.focus();
    }
  });

  lockButton.addEventListener('click', () => {
    sessionStorage.removeItem('vault-unlocked');
    content.style.display = 'none';
    gate.style.display = 'block';
    input.value = '';
  });
</script>

<style>
  .vault-page {
    max-width: 680px;
    margin: 0 auto;
  }

  .vault-gate {
    text-align: center;
    padding: 4rem 2rem;
  }

  .vault-icon {
    color: var(--uva-blue);
    margin-bottom: 1.5rem;
  }

  .vault-gate h1 {
    font-size: 2rem;
    margin-bottom: 0.75rem;
  }

  .vault-description {
    color: var(--text-muted);
    margin-bottom: 2rem;
  }

  .passcode-form {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    max-width: 320px;
    margin: 0 auto;
  }

  .passcode-input {
    flex: 1;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border: 1px solid var(--border-light);
    border-radius: 4px;
    outline: none;
    transition: border-color 0.15s ease;
  }

  .passcode-input:focus {
    border-color: var(--uva-blue);
  }

  .passcode-button {
    padding: 0.75rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: white;
    background: var(--uva-blue);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background 0.15s ease;
  }

  .passcode-button:hover {
    background: var(--uva-blue-light);
  }

  .error-message {
    color: #c53030;
    font-size: 0.875rem;
    margin-top: 1rem;
    min-height: 1.25rem;
  }

  .vault-header {
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-light);
    margin-bottom: 2rem;
  }

  .vault-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    letter-spacing: -0.03em;
  }

  .vault-subtitle {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .lock-button {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .lock-button:hover {
    color: var(--uva-blue);
    border-color: var(--uva-blue);
  }

  .entry-item {
    padding: 1.5rem 0;
    border-bottom: 1px solid var(--border-light);
  }

  .entry-item:first-child {
    padding-top: 0;
  }

  .entry-item a {
    text-decoration: none;
    display: block;
  }

  .entry-item time {
    display: block;
    font-size: 0.8125rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .entry-item h2 {
    font-size: 1.25rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    transition: color 0.15s ease;
  }

  .entry-item:hover h2 {
    color: var(--uva-blue);
  }

  .mood-tag {
    display: inline-block;
    font-size: 0.75rem;
    color: var(--uva-orange);
    background: rgba(229, 114, 0, 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 3px;
  }

  .no-entries {
    color: var(--text-muted);
    font-style: italic;
    padding: 2rem 0;
  }
</style>
