---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  url: string;
}

const { title, description, pubDate, url } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="article-item">
  <a href={url}>
    <time datetime={pubDate.toISOString()}>{formattedDate}</time>
    <h2>{title}</h2>
    <p>{description}</p>
  </a>
</article>

<style>
  .article-item {
    padding: 1.75rem 0;
    border-bottom: 1px solid #e5e5e5;
  }

  .article-item:first-child {
    padding-top: 0;
  }

  .article-item a {
    text-decoration: none;
    display: block;
  }

  .article-item time {
    display: block;
    font-size: 0.8125rem;
    color: #666;
    margin-bottom: 0.5rem;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .article-item h2 {
    font-family: Georgia, 'Times New Roman', serif;
    font-size: 1.375rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 0.5rem;
    line-height: 1.3;
    letter-spacing: -0.01em;
    transition: color 0.15s ease;
  }

  .article-item:hover h2 {
    color: #666;
  }

  .article-item p {
    font-size: 1rem;
    line-height: 1.6;
    color: #666;
    margin-bottom: 0;
  }
</style>
